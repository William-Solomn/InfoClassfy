<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.infoclassfy.methods.MaskImageView
        android:id="@+id/imgView_homeBg_bingPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"/>

    <Button
        android:id="@+id/btn_home_history"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_history"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="#FDF1EAEA"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_home_txtInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_up_circle"
        android:text="单条输入"
        android:textSize="30sp"
        android:textStyle="normal"
        android:textColor="#FDF1EAEA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_home_fileInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_down_circle"
        android:text="文件导入"
        android:textSize="30sp"
        android:textStyle="normal"
        android:textColor="#FDF1EAEA"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_home_txtInput"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>